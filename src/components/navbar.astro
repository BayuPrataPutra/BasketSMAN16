<!-- NAVBAR -->
<header class="fixed inset-x-0 top-0 z-50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <nav
      aria-label="Primary"
      class="flex items-center justify-between rounded-2xl bg-zinc-900/50 backdrop-blur ring-1 ring-white/10 px-4 py-3"
    >
      <!-- Logo -->
      <a
        href="#home"
        class="flex items-center gap-3 focus:outline-none focus-visible:ring focus-visible:ring-pink-500 rounded-lg"
      >
        <img
          src="images/logo.png"
          alt="Logo Tim Basket SMAN 16 Bandung"
          class="h-10 w-10"
        />
        <span class="font-extrabold tracking-tight">
          Basket SMAN 16 Bandung
        </span>
      </a>

      <!-- Desktop menu -->
      <ul class="hidden md:flex items-center gap-8 text-sm font-semibold">
        <li>
          <a
            href="#home"
            class="nav-link relative py-1 after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-pink-400 after:transition-[width] hover:after:w-full"
          >Beranda</a>
        </li>
        <li>
          <a
            href="#instagram"
            class="nav-link relative py-1 after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-pink-400 after:transition-[width] hover:after:w-full"
          >Instagram</a>
        </li>
        <li>
          <a
            href="#about"
            class="nav-link relative py-1 after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-pink-400 after:transition-[width] hover:after:w-full"
          >Tentang</a>
        </li>
        <li>
          <a
            href="#gear"
            class="nav-link relative py-1 after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-pink-400 after:transition-[width] hover:after:w-full"
          >Jersey & Merchandise</a>
        </li>
        <li>
          <a
            href="#contact"
            class="nav-link relative py-1 after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-pink-400 after:transition-[width] hover:after:w-full"
          >Kontak</a>
        </li>
      </ul>

      <!-- Mobile button -->
      <button
        id="menuBtn"
        class="md:hidden inline-flex h-10 w-10 items-center justify-center rounded-lg bg-white/5 hover:bg-white/10 focus:outline-none focus-visible:ring focus-visible:ring-pink-500"
        aria-expanded="false"
        aria-controls="mobileNav"
        aria-label="Buka menu navigasi"
      >
        <!-- icon hamburger -->
        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z" />
        </svg>
      </button>
    </nav>

    <!-- Mobile menu -->
    <div
      id="mobileNav"
      class="md:hidden hidden mt-2 rounded-2xl bg-zinc-900/60 backdrop-blur ring-1 ring-white/10 px-4 py-3"
    >
      <ul class="grid gap-2 text-sm font-semibold">
        <li><a class="block rounded-lg px-3 py-2 hover:bg-white/5" href="#home">Beranda</a></li>
        <li><a class="block rounded-lg px-3 py-2 hover:bg-white/5" href="#about">Tentang</a></li>
        <li><a class="block rounded-lg px-3 py-2 hover:bg-white/5" href="#gear">Jersey & Merchandise</a></li>
        <li><a class="block rounded-lg px-3 py-2 hover:bg-white/5" href="#contact">Kontak</a></li>
      </ul>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById("menuBtn");
  const mobile = document.getElementById("mobileNav");

  btn?.addEventListener("click", () => {
    const expanded = btn.getAttribute("aria-expanded") === "true";
    btn.setAttribute("aria-expanded", String(!expanded));
    mobile?.classList.toggle("hidden");
  });
</script>
