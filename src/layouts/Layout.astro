  </head>
  <body
    class="bg-slate-900 text-white selection:bg-pink-500/30 selection:text-pink-200"
  >
    <slot />
    <script>
      // Scrollspy (desktop)
      const sections = ["home", "instagram", "about", "gear", "contact"].map(
        (id) => document.getElementById(id)
      );
      const links = Array.from(document.querySelectorAll(".nav-link"));
      const linkMap = new Map(
        links.map((a) => [a.getAttribute("href")?.replace("#", ""), a])
      );
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            const id = entry.target.id;
            const link = linkMap.get(id);
            if (!link) return;
            if (entry.isIntersecting) {
              links.forEach((a) => a.classList.remove("text-pink-400"));
              link.classList.add("text-pink-400");
            }
          });
        },
        { rootMargin: "-50% 0px -45% 0px", threshold: 0.01 }
      );
      sections.forEach((sec) => sec && observer.observe(sec));
    </script>
  </body>
